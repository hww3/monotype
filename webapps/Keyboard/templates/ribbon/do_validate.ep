<script type="text/javascript">
dojo.require("dijit.dijit");
dojo.require("dojox.widget.DialogSimple");

var myDialog;

function showDialog(title, url)
{
  if(!myDialog)
    myDialog = new dojox.widget.DialogSimple({
              title: "Programmatic Dialog Creation",

          });

  myDialog.set('title', title);
  myDialog.set('href', url);
//  myDialog.set('style', 'width: 500px');
  myDialog.show();
}        

function showCodes(line, url)
{
  if(!myDialog)
    myDialog = new dojox.widget.DialogSimple({
              title: "Programmatic Dialog Creation",

          });

  myDialog.set('title', 'Display Caster Codes for Line ' + (line +1));
  myDialog.set('href', url);          
//  myDialog.set('style', 'width: 300px');
  myDialog.show();
}
</script>

<h1>Ribbon Validation</h1>
<form action="<%#action_url "action": "do_generate" %>">
<table>
<tr>
<td>
<b>Job Name:</b> <%$settings.jobname%> <b>Generated:</b> <%#describe_datetime "var": data->now%>
</td>
</tr>
<tr>
<td>
<b>Matcase:</b> <%$settings.matcase.name%> <b>Stopbar:</b> <%$settings.stopbar.name%> <b>Set:</b> <%$settings.setwidth%>
</td>
</tr>
<tr>
<td>
<b>Mould Size:</b> <%$settings.mould%> 
