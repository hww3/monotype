<% %>
<% if(data->controller =="/prefs")  %> 
  <title>CompCAT: Preferences</title>
<% %>

<meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />

<% if(data->controller == "/mca" || data->controller == "/ribbon") { %>
<script type="text/javascript" src="/dojo/dojo/dojo.js" djConfig="parseOnLoad:true, isDebug:false"></script>
<script type="text/javascript" src="/dojo/dijit/dijit.js"></script>
<% } %>


<link rel="stylesheet" type="text/css" media="screen" href="/static/Underground.css" />
<style type="text/css">
        @import url("/dojo/dojo/resources/dojo.css");
        @import url("/dojo/dijit/themes/tundra/tundra.css");
        @import url("/dojo/dojox/layout/resources/FloatingPane.css");
        @import url("/dojo/dojox/layout/resources/ResizeHandle.css");
        @import url("/dojo/dojo/resources/dnd.css");
</style>
</head>

<body class="tundra">
<!-- wrap starts here -->
<div id="wrap">

		<!-- header -->
		<div id="header">			
					
			<span id="slogan">monotype computer interface tools</span>
			
			<!-- tabs -->
			<ul>
	<li<% if(data->controller =="/")  %> id="current" <%  %>><%#action_link "controller":"/"%><span>Home</span></a></li>
	<li<% if (data->controller == "/mca"){ %> id="current" <% } %>><%#action_link "controller":"/mca"%><span>MCAs</span></a></li>			 
	<li<% if (data->controller == "/wedge"){ %> id="current" <% } %>><%#action_link "controller":"/wedge"%><span>Stopbars</span></a></li>			
	<li<% if (data->controller == "/ribbon"){ %> id="current" <% } %>><%#action_link "controller":"/ribbon"%><span>Ribbons</span></a></li>			
	<li<% if (data->controller == "/prefs"){ %> id="current" <% } %>><%#action_link "controller":"/prefs"%><span>Preferences</span></a></li>			
			</ul>
											
		</div>
		
		<div id="header-logo">			
			
			<div id="logo">comp<span class="red">cat</span></div>		
<div id="user">			
		<%if (data->user){ %>
		Connected as <%$user.name%> / Version ${ribbonGeneratorVersion} 
